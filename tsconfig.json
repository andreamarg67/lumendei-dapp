{
  "compilerOptions": {
    "target": "ES2020", // More modern target
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true, // Set to true for best dev experience (optional)
    "noEmit": true,
    "incremental": true,
    "module": "ESNext",
    "moduleResolution": "bundler", // <- key for modern packages like wagmi
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ], // <- ensure node types are loaded
    "allowSyntheticDefaultImports": true // <- for compatibility with some ESM modules
    ,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
